---
import HeadSEO from "@/components/core/HeadSEO.astro";
import Header from "@/components/core/Header.astro";

import { LOCALE, SITE } from "@data/config";
import type { BaseLayoutProps } from "@/lib/types";

interface Props extends BaseLayoutProps {
    fullWidth?: boolean;
}

const {
    title,
    description,
    image,
    imageAlt,
    contentType,
    fullWidth = false,
} = Astro.props as Props;
---

<html lang={LOCALE.lang ?? "en"}>
    <head>
        <HeadSEO
            title={title}
            description={description}
            image={image}
            imageAlt={imageAlt}
            contentType={contentType}
        />
    </head>

    <body
        class="min-h-screen bg-background text-foreground antialiased"
        data-layout={SITE.enableLayoutWidthToggle ? undefined : "comfort"}
    >
        <div class="relative isolate flex min-h-screen flex-col">
            <Header />
            <main class="relative z-10 flex flex-1 flex-col">
                {
                    fullWidth ? (
                        <slot />
                    ) : (
                        <div
                            id="main-content"
                            class="mx-auto flex w-full flex-col gap-10 px-4 py-10 lg:gap-14 lg:py-14"
                        >
                            <slot />
                        </div>
                    )
                }
            </main>
        </div>
    </body>
</html>
