---
import { getCollection, render } from "astro:content";
import { SITE, CONTENT } from "@data/config";
import DocsLayout from "@/layouts/DocsLayout.astro";
import MdxImage from "@/components/docs/markdown/MdxImage.astro";
import MdxLink from "@/components/docs/markdown/MdxLink.astro";

export async function getStaticPaths() {
    const paths: any[] = [];
    for (const sys of CONTENT.systems ?? [
        { id: "docs", dir: "content/docs" },
    ]) {
        paths.push({
            params: { collection: sys.id },
            props: { collection: sys.id },
        });
    }
    return paths;
}

const collection = Astro.params.collection as string;

const entries = (await getCollection(collection as any)) as any[];
const doc = entries.find((d) => d.id === "index");

// Resolve redirect fallback from system or global default
const sys = (CONTENT.systems ?? []).find((s: any) => s.id === collection);
let redirectTo = sys?.defaultDocRedirect ?? "/";

if (!doc) {
    return Astro.redirect(redirectTo);
}

const { Content, headings } = await render(doc);

const components = {
    img: MdxImage,
    a: MdxLink,
};
---

<DocsLayout frontmatter={doc} headings={headings}>
    <Content components={components} />
</DocsLayout>
