---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";

const HERO_TITLE = "CelestialDocs";
const HERO_SUBTITLE =
  "A modern, type-safe documentation system with hierarchical navigation, hybrid generation, and multi-collection support.";
const CTA_PRIMARY = { href: "/docs/introduction", label: "View Documentation" };
const CTA_SECONDARY = {
  href: "https://github.com/HYP3R00T/CelestialDocs",
  label: "View on GitHub",
};
---

<BaseLayout
  title={`${HERO_TITLE} - Modern documentation template`}
  description={HERO_SUBTITLE}
  image="/docs-hero.jpg"
  imageAlt="CelestialDocs documentation template hero"
>
  <!-- Hero Section -->
  <section class="mx-auto max-w-6xl px-5 py-8 sm:py-12">
    <div class="space-y-8">
      <div class="space-y-4">
        <h1
          class="text-5xl font-bold leading-tight tracking-tight text-foreground sm:text-6xl lg:text-7xl"
        >
          {HERO_TITLE}
        </h1>
        <p class="mx-auto max-w-2xl text-xl text-muted-foreground">
          Modern documentation that scales with your project
        </p>
      </div>

      <div class="flex flex-col items-center justify-center gap-3 sm:flex-row">
        <Button size="lg">
          <a href={CTA_PRIMARY.href}>Get Started</a>
        </Button>
        <Button size="lg" variant="secondary">
          <a href={CTA_SECONDARY.href} class="flex flex-row gap-3 items-center">
            View on GitHub
            <Icon name="github" />
          </a>
        </Button>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="mx-auto max-w-6xl px-5 py-8 sm:py-12">
    <div class="mb-12 text-center">
      <h2 class="text-3xl font-bold text-foreground sm:text-4xl">
        Everything you need
      </h2>
      <p class="mt-3 text-lg text-muted-foreground">
        Built with best practices and developer experience in mind
      </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <div class="space-y-3 rounded-lg bg-popover p-6">
        <div class="text-3xl">üß≠</div>
        <h3 class="text-lg font-semibold text-foreground">Smart Navigation</h3>
        <p class="text-sm text-muted-foreground">
          Hierarchical structure with tabs, groups, and breadcrumbs keeps users
          oriented
        </p>
      </div>

      <div class="space-y-3 rounded-lg bg-popover p-6">
        <div class="text-3xl">‚ö°</div>
        <h3 class="text-lg font-semibold text-foreground">Fast Setup</h3>
        <p class="text-sm text-muted-foreground">
          Auto-generate or configure manually, your choice
        </p>
      </div>

      <div class="space-y-3 rounded-lg bg-popover p-6">
        <div class="text-3xl">üîí</div>
        <h3 class="text-lg font-semibold text-foreground">Type Safe</h3>
        <p class="text-sm text-muted-foreground">
          Strict TypeScript and Zod validation catch errors before deployment
        </p>
      </div>

      <div class="space-y-3 rounded-lg bg-popover p-6">
        <div class="text-3xl">üóÇÔ∏è</div>
        <h3 class="text-lg font-semibold text-foreground">Multi-Collection</h3>
        <p class="text-sm text-muted-foreground">
          Separate docs, guides, and API references with independent navigation
        </p>
      </div>

      <div class="space-y-3 rounded-lg bg-popover p-6">
        <div class="text-3xl">üìù</div>
        <h3 class="text-lg font-semibold text-foreground">MDX Support</h3>
        <p class="text-sm text-muted-foreground">
          Write in Markdown with the power of React components
        </p>
      </div>

      <div class="space-y-3 rounded-lg bg-popover p-6">
        <div class="text-3xl">üé®</div>
        <h3 class="text-lg font-semibold text-foreground">Beautiful UI</h3>
        <p class="text-sm text-muted-foreground">
          Dark mode, responsive design, and accessible by default
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="mx-auto max-w-6xl px-5 py-8 sm:py-12 w-full">
    <div class="mb-4 text-center">
      <h2 class="text-3xl font-bold text-foreground sm:text-4xl">
        Ready to get started?
      </h2>
      <p class="mt-3 text-lg text-muted-foreground">
        Explore the documentation or try the live demo
      </p>
    </div>
    <div class="flex flex-col items-center justify-center gap-3 sm:flex-row">
      <Button size="lg" variant="secondary">
        <a href="/docs/introduction">
          Read the Docs
          <span aria-hidden="true">-></span>
        </a>
      </Button>
      <Button size="lg" variant="secondary">
        <a href="/funnydocs">View Demo</a>
      </Button>
    </div>
  </section>
</BaseLayout>
